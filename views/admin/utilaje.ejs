

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Utilaje</title>
</head>
<body style="margin-top:2em; margin-bottom: 1em; display: flex; flex-direction: column; align-items: center;">
  
  <form method="POST" action="./utilaje">
    <input type="text" name="nume">
    <% Operatii.forEach(operatie => { %>
        <div style="display: flex;">
          <label for="<%= operatie.id %>"><%= operatie.nume %></label>
          <input type="checkbox" name="<%= operatie.id %>" value="<%= operatie.id %>">
        </div>
    <% }); %>
    <button type="submit">ADAUGATI</button>
  </form>

  <section style="display: flex; flex-direction: column; align-items: center;">

    <p style="font-size: 20px;">LISTA UTILAJE</p>

    <% Utilaje.forEach(utilaj => { %>
      <div style="width: 85%; display: flex; justify-content: center; border-radius: 1em; border: 2px solid black; background-color: gray;">
        <%= utilaj.nume %>
        <form method="POST" action="./sterge-utilaj">
          <input type="hidden" id="id" name="id" value="<%= utilaj.nume %>">
          <button type="submit">Sterge Utilaj</button>
        </form>
        <br>
        <%= utilaj.operatii %>
      </div>
    <% }); %>

  </section>

</body>
</html>