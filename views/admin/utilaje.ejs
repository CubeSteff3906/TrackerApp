

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Utilaje</title>
</head>
<body style="margin: 0; display: flex; flex-direction: column; align-items: center; padding: 0;">
  
  <header style="width: 100%; padding: 0.75em 0.1em; display: flex; align-items: center; border: 4px solid black;">
    <div style="display: flex; text-align: center; font-size: 1.2em; padding-left: 0.8em; flex: 15%;">
      <a href="../" style="margin: 0.4em 0.6em; font-size: 1.6em; font-weight: bold;">&#10094; INAPOI</a>
    </div>
    <nav style="flex: 85%;">
      <ul
        style="font-size: 1.6em; display: flex; justify-content: space-between; padding: 0 5em 0 8em; list-style-type: none;">
        <li><a href="./">LOG</a></li>
        <li><a href="./angajati">ANGAJATI</a></li>
        <li><a href="./operatii">OPERATII</a></li>
        <li style="background-color: gray;"><a href="./utilaje">UTILAJE</a></li>
        <li><a href="./rtsp">RTSP-URI</a></li>
      </ul>
    </nav>
  </header>

  <form method="POST" action="./utilaje">
    <input type="text" name="nume">
    <% Operatii.forEach(operatie => { %>
        <div style="display: flex;">
          <label for="<%= operatie.id %>"><%= operatie.nume %></label>
          <input type="checkbox" name="<%= operatie.id %>" value="<%= operatie.id %>">
        </div>
    <% }); %>
    <button type="submit">ADAUGATI</button>
  </form>

  <section style="display: flex; flex-direction: column; align-items: center;">

    <p style="font-size: 20px;">LISTA UTILAJE</p>

    <% Utilaje.forEach(utilaj => { %>
      <div style="width: 85%; display: flex; justify-content: center; border-radius: 1em; border: 2px solid black; background-color: gray;">
        <%= utilaj.nume %>
        <form method="POST" action="./sterge-utilaj">
          <input type="hidden" id="id" name="id" value="<%= utilaj.nume %>">
          <button type="submit">Sterge Utilaj</button>
        </form>
        <br>
        <%= utilaj.operatii %>
      </div>
    <% }); %>

  </section>

</body>
</html>